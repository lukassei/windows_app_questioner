<Window x:Class="Questioner.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Questioner"
        mc:Ignorable="d"
        Title="TestWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="WpfTest_questionTask" Text="xxx?" VerticalAlignment="Center" TextAlignment="Center" Grid.Row="0"/>
        <Button Name="WpfTest_answer1" Content="answer1" Grid.Row="1" Margin="2.5" Click="WpfTest_answer1_Click"/>
        <Button Name="WpfTest_answer2" Content="answer2" Grid.Row="2" Margin="2.5" Click="WpfTest_answer2_Click"/>
        <Button Name="WpfTest_answer3" Content="answer3" Grid.Row="3" Margin="2.5" Click="WpfTest_answer3_Click"/>
    </Grid>
</Window>
